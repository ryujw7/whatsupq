<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp">
    <ImageView android:id="@+id/curation_result_prod_img"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@mipmap/ic_launcher_round"
               android:layout_marginBottom="12dp"/>
    <TextView android:id="@+id/curation_result_prod_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="상품명"
              android:fontFamily="@font/locussangsang"
              android:textColor="#000000"
              android:textSize="17sp"
              android:layout_marginBottom="5dp"/>
    <TextView android:id="@+id/curation_result_prod_cost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="가격"
              android:fontFamily="@font/goyangilsanr"
              android:textSize="14sp"
              android:textColor="#000"/>
</LinearLayout>