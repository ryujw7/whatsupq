<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#FFFFFF">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp">
        <CheckBox android:id="@+id/cart_item_check"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="홈카페 5종 컵 세트"
                  android:layout_alignParentLeft="true"
                  android:textSize="14sp"/>
        <ImageView android:id="@+id/cart_item_delete"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:src="@drawable/x_active"
                   android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/cart_item_img"
                   android:layout_width="90dp"
                   android:layout_height="90dp"
                   android:src="@drawable/ic_launcher_background"
                   android:layout_below="@+id/cart_item_check"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="8dp"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="right"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentBottom="true">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_marginBottom="8dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="수량"
                          android:textSize="12sp"
                          android:layout_marginRight="15dp"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="24dp"
                              android:orientation="horizontal">
                    <Button android:id="@+id/cart_item_minus"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:text="-"
                            android:background="@drawable/plusminus_btn"
                            android:enabled="false"/>
                    <TextView android:id="@+id/cart_item_amount"
                              android:layout_width="40dp"
                              android:layout_height="match_parent"
                              android:text="1"
                              android:textAlignment="center"
                              android:background="@drawable/plusminus_btn"/>
                    <Button android:id="@+id/cart_item_plus"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:background="@drawable/plusminus_btn"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="8dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="배송 주기"
                          android:textSize="12sp"
                          android:layout_marginRight="15dp"/>
                <Spinner android:layout_width="88dp"
                         android:layout_height="24dp"
                         android:entries="@array/frequency"
                         android:background="@drawable/plusminus_btn"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">
                <TextView android:id="@+id/cart_item_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="19sp"
                          android:text="19,000"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="19sp"
                          android:text="원"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>