<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.tutorial.TutorialActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager android:id="@+id/tutorial_viewpager"
                                             android:layout_width="match_parent"
                                             android:layout_height="0dp" android:layout_weight="1">
        </androidx.viewpager.widget.ViewPager>
        <com.google.android.material.tabs.TabLayout android:id="@+id/tutorial_indicator"
                                                    android:layout_width="300dp"
                                                    android:layout_height="20dp"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginBottom="30dp"
                                                    app:tabBackground="@drawable/tab_selector"
                                                    app:tabGravity="center"
                                                    app:tabIndicatorHeight="0dp"/>

        <Button android:id="@+id/tutorial_btn"
                android:layout_width="match_parent" android:layout_height="75dp"
                android:layout_marginBottom="57dp" android:layout_marginLeft="92dp" android:layout_marginRight="92dp"
                android:text="시작하기" android:textSize="27sp" android:enabled="false"
                android:background="@drawable/tutorial_btn" android:textColor="@drawable/tutorial_btn_textcolor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>