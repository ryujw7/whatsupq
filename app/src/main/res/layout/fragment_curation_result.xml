<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingBottom="60dp">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="15dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/goyangilsanr"
                          android:text="당신을 위해 준비했어요."
                          android:textColor="#8499a2"
                          android:textSize="15sp"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginBottom="20dp"
                              android:orientation="vertical">
                    <TextView android:id="@+id/curation_result_yourType"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/locussangsang"
                              android:paddingVertical="5dp"
                              android:text="대충 어쩌고 저쩌고 하는 타입"
                              android:textColor="@color/lightblue"
                              android:textSize="22sp"/>
                    <View android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightblue"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/locussangsang"
                          android:text="특별함이 담긴 박스 소개합니다"
                          android:textColor="#000000"
                          android:textSize="17sp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/goyangilsanr"
                          android:text="지금 확인해봐요"
                          android:textColor="#000000"
                          android:textSize="14sp"/>
                <include android:id="@+id/fragment_home_theme_curation"
                         layout="@layout/fragment_home_themebox_item"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:background="@color/silver"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/locussangsang"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:text="필요한 생필품만 담았어요"
                          android:textColor="#000000"
                          android:textSize="17sp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/goyangilsanr"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:text="매번 사기 귀찮았던 생필품 정기배송으로 해결"
                          android:textColor="#000000"
                          android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/curation_result_essential_recyclerview"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="horizontal"
                                                           android:padding="15dp"
                                                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:background="@color/silver"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingTop="15dp"
                          android:paddingBottom="15dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/locussangsang"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:text="놓치던 것들도 챙겨줄게요"
                          android:textColor="#000000"
                          android:textSize="17sp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/goyangilsanr"
                          android:paddingLeft="15dp"
                          android:paddingRight="15dp"
                          android:text="당신의 윤택한 자취 생활 함께 만들어봐요"
                          android:textColor="#000000"
                          android:textSize="14sp"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/curation_result_optional_recyclerview"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:orientation="horizontal"
                                                           android:padding="15dp"
                                                           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="15dp"
                      android:fontFamily="@font/goyangilsanr"
                      android:text="이전과 자취 생활이 많이 달라졌다면"
                      android:textColor="#7da8bc"
                      android:textSize="17sp"/>
            <Button android:id="@+id/curation_result_click"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/button_buy_frequency"
                    android:fontFamily="@font/locussangsang"
                    android:text="재설정 하러가기"
                    android:textColor="@color/robins_egg_blue"
                    android:textSize="19sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>