<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ImageView android:id="@+id/search_not_found_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:layout_marginBottom="50dp"
               android:background="@android:color/transparent"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/search_not_found_img"/>
    <TextView android:id="@+id/search_not_found_text1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="70dp"
              android:layout_marginBottom="20dp"
              android:fontFamily="@font/goyangilsanr"
              android:gravity="center"
              android:text="검색결과가 없습니다"
              android:textColor="#000000"
              android:textSize="25sp"
    />
    <TextView android:id="@+id/search_not_found_text2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="70dp"
              android:fontFamily="@font/goyangilsanr"
              android:gravity="center"
              android:text="다른 검색어를 시도 해 보세요"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
    />
</LinearLayout>