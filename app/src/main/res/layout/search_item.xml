<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
>
    <TextView android:id="@+id/search_item"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:layout_centerInParent="true" android:layout_alignParentLeft="true"
              android:text="search item" android:textSize="14sp" android:textColor="#d1d3d4"
              />
    <ImageButton android:id="@+id/deleteBtn"
                 android:layout_width="24dp" android:layout_height="24dp"
                 android:src="@drawable/x_non_active" android:layout_centerInParent="true"
                 android:layout_alignParentRight="true"
                 android:background="@android:color/transparent"
                 android:layout_marginRight="10dp"/>
</RelativeLayout>