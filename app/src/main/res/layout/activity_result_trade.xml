<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="12"
                android:background="@color/robins_egg_blue">
            <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/rewind"
                    android:background="@android:color/transparent"
            />
            <FrameLayout android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="2.5"></FrameLayout>
            <ImageButton
                    android:id="@+id/main_banner"
                    android:layout_width="60dp"
                    android:layout_height="?actionBarSize"
                    android:background="@android:color/transparent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_banner"/>

            <FrameLayout android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="2"></FrameLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:src="@drawable/car_result_trade"
                       android:layout_marginTop="45dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="38dp"
                      android:text="주문이 완료되었습니다."
                      android:textSize="25sp"
                      android:textColor="#000000"
                      android:fontFamily="@font/locussangsang"
                      android:layout_gravity="center_horizontal"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="12dp"
                      android:text="정기 배송일과 결제일은 마이페이지에서\n언제든지 바꿀 수 있어요."
                      android:textSize="12sp"
                      android:textColor="#000000"
                      android:fontFamily="@font/goyangilsanr"
                      android:textAlignment="center"
                      android:layout_gravity="center_horizontal"
            />
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_marginTop="68dp"
                         android:background="@color/warm_grey"></FrameLayout>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="16dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          tools:text="정기 배송일"
                          android:fontFamily="@font/locussangsang"
                          android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/regular_delivery_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="매달 20일"
                        android:fontFamily="@font/locussangsang"
                        android:layout_gravity="right"/>
            </FrameLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_marginTop="14dp"
                         android:background="@color/warm_grey"></FrameLayout>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="16dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          tools:text="주문번호"
                          android:fontFamily="@font/locussangsang"
                          android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="201907202302000006"
                        android:fontFamily="@font/goyangilsanl"
                        android:layout_gravity="right"/>
            </FrameLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_marginTop="14dp"
                         android:background="@color/warm_grey"></FrameLayout>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="16dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          tools:text="주문상품"
                          android:fontFamily="@font/locussangsang"
                          android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/order_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="제주삼다수, 500ml, 40개입 외 3개"
                        android:fontFamily="@font/goyangilsanl"
                        android:layout_gravity="right"/>
            </FrameLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_marginTop="14dp"
                         android:background="@color/warm_grey"></FrameLayout>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="16dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:textColor="#000000"
                          tools:text="결제금액"
                          android:fontFamily="@font/locussangsang"
                          android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/cost_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:text="30,500원"
                        android:fontFamily="@font/locussangsang"
                        android:layout_gravity="right"/>
            </FrameLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="14dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="#000000"
                          tools:text="총 주문금액"
                          android:fontFamily="@font/goyangilsanr"
                          android:layout_gravity="left"/>

                <TextView
                        android:id="@+id/cost_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="30,500원"
                        android:fontFamily="@font/goyangilsanr"
                        android:layout_gravity="right"/>
            </FrameLayout>
            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="6dp"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="10dp"
                         android:orientation="horizontal">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:textColor="#000000"
                          tools:text="배송비"
                          android:fontFamily="@font/goyangilsanr"
                          android:layout_gravity="left"/>
                <TextView
                        android:id="@+id/cost_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="무료"
                        android:fontFamily="@font/goyangilsanr"
                        android:layout_gravity="right"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="40dp">
                <Button
                        android:id="@+id/search_order_history"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="주문 내역 조회"
                        android:textSize="18sp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/locussangsang"
                        android:textColor="@android:color/white"
                        android:background="@color/silver"/>
                <Button
                        android:id="@+id/home_btn"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="홈 화면 가기"
                        android:textSize="18sp"
                        android:fontFamily="@font/locussangsang"
                        android:textColor="@android:color/white"
                        android:layout_gravity="right"
                        android:background="@color/robins_egg_blue"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>