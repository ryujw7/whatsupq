              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="20dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle">
